<UserControl x:Class="WpfApp1.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:units ="clr-namespace:WpfExplorer.Support.UI.Units;assembly=WpfExplorer.Support"
             xmlns:views ="clr-namespace:WpfExplorer.Main.UI.Views;assembly=WpfExplorer.Main"
             xmlns:views2 ="clr-namespace:WpfExplorer.Main.UI.Units;assembly=WpfExplorer.Main"
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="Black">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- CloseButton.xaml 사전 경로 -->
                <ResourceDictionary Source="/WpfExplorer.Main;component/Themes/Views/MainContent.xaml"/>
                <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/CloseButton.xaml"/>
                <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/MaximizeButton.xaml"/>
                <ResourceDictionary Source="/WpfExplorer.Support;component/Themes/Units/MinimizeButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <units:CloseButton Grid.Column="0"/>
        <views:MainContent Grid.Column="1"/>
        <views2:FolderTreeView Grid.Column="2">
            <views2:FolderTreeView.Resources>
                <Style TargetType="TreeViewItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#FF323847"/>
                </Style>
            </views2:FolderTreeView.Resources>
            <TreeViewItem Header="Root 1" >
                <TreeViewItem Header="Child 1-1"/>
            </TreeViewItem>
            <TreeViewItem Header="Root 2"/>
            <views2:FolderTreeItem Header="James">
                <views2:FolderTreeItem>Lucas</views2:FolderTreeItem>
            </views2:FolderTreeItem>
            <views2:FolderTreeItem Header="Lucas2" />
        </views2:FolderTreeView>
    </Grid>
</UserControl>
